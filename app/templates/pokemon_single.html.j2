{% extends './layout.html' %}

{% block title %}{{ pokemon.name.title() }}{% endblock title%}

{% block content %}
<div class="content-top">
    <div class="top-flex">
        <form action="{{ url_for('main.choose_pokemon') }}" method="POST">
            <input type="hidden" value="{{ pokemon.id }}" name='pokemon'>

            <button type="submit" class="btn yellow-btn btn-form" aria-current="choose pokemon">I Choose You!</button>
        </form>
    </div>
    <div class="top-h1 top-flex">
        <h1>Pokemon</h1>
    </div>
    <div class="top-flex">
    <a class="btn yellow-btn" aria-current="log out" href="#">Search Pokemon</a>
    </div>
</div>

<div class="card-flex">
    <div class="card pokemon_card">
        <div class="card-body">
            <h3 class="card-title">{{ pokemon.name.title() }}</h3>
            <p><small></small></p>
            {% if pokemon.id < 650 %} <td> <img class="pokedex_img"
                    src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/dream-world/{{pokemon.id}}.svg">
                </td>
                {% else%}
                <img class="pokedex_img" src="{{ pokemon.reg_sprite }}" , height="300">
                {% endif %}

                <p><strong>Type</strong>: {{ pokemon.type1 }}</p>
                {% if pokemon.type2 %}
                <p><strong>Type 2</strong>: {{ pokemon.type2 }}</p>
                {% endif %}
                <p><strong>Ability</strong>: {{ pokemon.ability1 }}</p>
                {% if pokemon.ability2 %}
                <p><strong>Ability</strong>: {{ pokemon.ability2 }}</p>
                {% if pokemon.type3 %}
                <p><strong>Ability</strong>: {{ pokemon.ability3 }}</p>
                {% endif %}
                {% endif %}
        </div>
        <div class="card-footer">
            Pokemon ID: {{ pokemon.id}}
        </div>
    </div>

</div>

{% endblock content %}